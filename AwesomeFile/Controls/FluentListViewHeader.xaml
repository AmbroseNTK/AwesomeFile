<UserControl x:Class="AwesomeFile.Controls.FluentListViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwesomeFile.Controls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="20" d:DesignWidth="160" Height="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="1*" MaxWidth="30" MinWidth="20"></ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textHeaderName" Text="Header" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></TextBlock>
        <materialDesign:PackIcon Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Kind="SortAscending" Width="20"/>
        <Rectangle Fill="LightGray" Width="3" Grid.Column="2" x:Name="resizeBar"></Rectangle>
    </Grid>
</UserControl>
